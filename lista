	<?php
	if(!empty($_GET['submit'])){
	$username="ivanhalen";
	$pass="pan";
	$servername="localhost";
	$db="new_db";
	$mysqli= new mysqli($servername,$username,$pass,$db);
	if($mysqli->connect_error)
	{
		die('<pre>No pudo conectarse: ' . $mysqli->connect_errno.'</pre>');
	}else
	{
		echo "<pre>Connected succesfully</pre>";
	}
	$tabla=$_GET['tabla'];
	$sql="select*from $tabla;";
	$result=$mysqli->query($sql);
	if ($result->num_rows>0) {
		while ($row=$result->fetch_assoc())	{
			switch ($tabla)
			{
				case "industrie": 
					?> <br><?php echo "".$row["CUIT"]." ".$row["nombre"]." ".$row["direccion"]." ".$row["telefono"]." ".$row["web"]." ".$row["razon_social"];
				break;
				
				case "empl_pr": 
					?> <br><?php echo "".$row["id_pry"]." ".row["id_empl"];
				break;
				
				case "employee": 
					?> <br><?php echo "".$row["id"]." ".$row["nombre"]." ".$row["correo"]." ".$row["tel"]." ".$row["area"]." ".$row["cargo"]." ".$row["salario"];
				break;
				
				case "empr_empl": 
					?> <br><?php echo "".$row["id_empr"]." ".$row["id_empl"];
				break;
				
				case "proyect": 
					?> <br><?php echo "".$row["id_pry"]." ".$row["nombre"]." ".$row["hs"]." ".$row["costos_extra"]." ".$row["prioridad"];
				break;
				
				case "sale": 
					?> <br><?php echo "".$row["id_ven"]." ".$row["fecha"]." ".$row["precio_venta"]." ".$row["precio_final"]." ".$row["estado"]." ".$row["resultado"];
				break;
				
				case "ven_pr": 
					?> <br><?php echo "".$row["id_pry"]." ".$row["id_ven"];
				break;
			}
		}
	} else {
		echo "0 results";
	}


	}

